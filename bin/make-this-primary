#!/bin/bash

ACTIVE_WORKSPACE=$(hyprctl activeworkspace -j | jq -r '.name')
PRIMARY=$(hyprctl activeworkspace -j | jq -r '.monitor')
SECONDARY=$(hyprctl monitors -j | jq -r '.[].name' | grep -Fxv -- $PRIMARY | head -1)

echo "Active workspace: $ACTIVE_WORKSPACE"
echo "Primary monitor: $PRIMARY"
echo "Secondary monitor: $SECONDARY"

# Workspace 1-8 on primary monitor
# Workspace 9-10 on secondary monitor
for ws in {1..8}; do
  hyprctl dispatch moveworkspacetomonitor "$ws" $PRIMARY;
done

for ws in 9 10; do
  hyprctl dispatch moveworkspacetomonitor "$ws" $SECONDARY;
done
